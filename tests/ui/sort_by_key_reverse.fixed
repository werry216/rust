// run-rustfix
#![warn(clippy::sort_by_key_reverse)]

use std::cmp::Reverse;

fn id(x: isize) -> isize {
    x
}

fn main() {
    let mut vec: Vec<isize> = vec![3, 6, 1, 2, 5];
    vec.sort_by_key(|&b| Reverse(b));
    vec.sort_by_key(|&b| Reverse((b + 5).abs()));
    vec.sort_by_key(|&b| Reverse(id(-b)));
}
